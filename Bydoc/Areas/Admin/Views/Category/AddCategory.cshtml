
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model Bydoc.Areas.Admin.Models.DTO.CategoryVM
<section class="content-header">
    <h1>
        Add Category
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>
<section class="content">
    
    <div class="row">
        <div class="col-md-7"> 
            @Html.Partial("/Areas/Admin/Views/Shared/Partial/FormMessagePartial.cshtml")
               
                   
            <div class="box box-primary">
                
                
                @using (Html.BeginForm())
                {
                    <div class="box-body">
                        <div class="form-group">
                            @Html.LabelFor(x=>x.Name)
                            @Html.TextBoxFor(x=>x.Name, new {@class="form-control", @placeholder="Category Name"})
                            @Html.ValidationMessageFor(x=>x.Name)
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(x=>x.Description)
                            @Html.TextAreaFor(x=>x.Description,new { @class="form-control", @placeholder="Description"})
                            
                        </div>
                        
                        
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                }

                
            </div>
          
        </div>
        
    </div>
</section>