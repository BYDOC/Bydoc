
@{
    ViewBag.Title = "AddSiteMenu";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Scripts/jquery.validate.min.js"></script>

<section class="content-header">
    <h1>
        Add Site Menu
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>
<style>
    .error{
    color:red
    }
</style>

<section class="content">
    <div class="row">
        <div class="col-md-9">
            @Html.Partial("/Areas/Admin/Views/Shared/Partial/FormMessagePartial.cshtml")
            <div class="box box-primary">
                <div class="box-body">
                    <form action="/Admin/SiteMenu/AddSiteMenu" id="frmSiteMenu" method="post">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" name="Name" class="form-control" value=""  required/>
                        </div>
                        <div class="form-group">
                            <label>Url</label>
                            <input type="text" name="Url" class="form-control" value="" required/>
                        </div>
                        <div class="form-group">
                            <label>CssClass</label>
                            <input contextmenu="text" class="form-control" name="cssClass"  value=""/>
                        </div>
                        <div class="form-group">
                            <input type="submit" name="name" class="btn btn-primary" value="Send" />
                        </div>
                        
                    </form>

                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $("#frmSiteMenu").validate();
</script>