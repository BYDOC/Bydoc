
@{
    ViewBag.Title = "AddSiteMenuWithJson";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>AddSiteMenuWithJson</h2>


<section class="content-header">
    <h1>
        Add Site Menu
        <small>Preview</small>
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
    </ol>
</section>


<section class="content">
    <div class="row">
        <div class="col-md-9">
            
            <div class="box box-primary">
                <div class="box-body">
                       
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" id="Name" class="form-control" value="" required />
                        </div>
                        <div class="form-group">
                            <label>Url</label>
                            <input type="text" id="Url" class="form-control" value="" required />
                        </div>
                        <div class="form-group">
                            <label>CssClass</label>
                            <input contextmenu="text" class="form-control" id="cssClass" value="" />
                        </div>
                        <div class="form-group">
                            <btn class="btn btn-primary" id="button">Submit</btn>
                        </div>
                  
                </div>
            </div>
        </div>
    </div>
</section>

<script>
    $("#button").click(function () {
        var sitemenu = new Object();
        sitemenu.Name = $("#Name").val();
        sitemenu.Url = $("#Url").val();
        sitemenu.cssClass = $("#cssClass").val();

        $.ajax({
            url: "/Admin/SiteMenu/AddSiteMenuJSON",
            data:sitemenu,
            type: "POST",
            success: function () {

                alert("Site menu has been added successfully");
            }
        })


    });
</script>